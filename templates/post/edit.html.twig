{% extends "post/index.html.twig" %}

{% block title %}
	Edit post
{% endblock %}

{% block content %}
	<div class="row justify-content-center">
		<div class="col-lg-8 align-center">
			<div class="card shadow">
				<div class="card-body">
					<h1 class="card-title text-center">Edit a post</h1>
					<hr class="my-2">
					{{ form_start(form, {'attr': {'class': 'was-validated'}}) }}
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block js %}
	{{ parent() }}
	<script src="{{ asset('js/inputfile-form-fix.js') }}"></script>
{% endblock %}
